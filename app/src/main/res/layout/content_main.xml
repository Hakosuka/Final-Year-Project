<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:text="Press me to find your GPS coordinates!"
        android:id="@+id/button_gps_activation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gps_latitude"
        android:text="@string/lati"
        android:layout_below="@+id/button_gps_activation"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gps_longitude"
        android:text="@string/longi"
        android:layout_below="@id/gps_latitude"
        android:layout_alignLeft="@id/gps_latitude"/>
    <android.support.v7.widget.AppCompatButton
        android:text="Check if server is up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_server_button"
        android:layout_below="@+id/gps_longitude"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/server_status"
        android:layout_below="@+id/check_server_button"/>
</RelativeLayout>
